{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build 2048 Debug",
      "type": "shell",
      "command": "fpc",
      "args": [
        "-g",
        "-gl",
        "-Ci",
        "-Co",
        "-Cr",
        "-Ct",
        "-Sa",
        "-FEout/",
        "-FUobj/",
        "main.lpr"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/2048"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
